<div id="reg-dropdown" data-dropdown-content class="f-dropdown content" aria-hidden="true">
    <div id="registration" class="pages" data-orbit>
        <div data-orbit-slide="login" class="slide">
            <div>
                <h2>Login</h2>
                <div class="row collapse">
                    <div class="large-12 columns">
                        <a href="#" class="btn btn-facebook" data-js="facebook-connect">
                            <span class="">Connect with Facebook</span>
                        </a>
                        <p class="recommended">(Recommended)</p>
                    </div>
                </div> 

                <div class="divider row collapse">
                    <div class="large-12 columns">
                        <div class="line"><span>or use your account</span></div>
                    </div>  
                </div>

                <form data-abide>
                    <div class="row">
                        <div class="small-12 columns">
                            <div class="row collapse">
                                <div class="small-12 email-wrapper columns">
                                    <input name="email" type="email" placeholder="Email" required />
                                    <small class="error">A valid email address is required.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 password-wrapper columns">
                                    <input name="password" type="password" placeholder="Password" pattern="^.{2,255}$" required />
                                    <small class="error">A password of atleast 2 characters is required.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-6 columns">
                                    <input id="remember" name="remember" type="checkbox" value="1"> Remember Me
                                </div>
                                <div class="small-6 columns">
                                    <button type="submit" class="submit small right radius">Login</button>
                                </div>
                            </div>                                                    
                        </div>
                    </div>
                </form>

                <div class="row collapse">
                    <div class="small-12 columns">
                        <a href="#" data-orbit-link="forgot" class="forgot right"><i>Forgot your Password?</i></a>
                    </div>
                </div>   

                <div class="divider row collapse">
                    <div class="large-12 columns">
                        <div class="line"><span>Don't have an account?</span></div>
                        <a data-orbit-link="signup" class="slide-nav">Sign Up <i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div><!-- end login slide -->

        <div data-orbit-slide="signup" class="slide">
            <div>
                <h2>Signup</h2>

                <form data-abide>
                    <div class="row">
                        <div class="small-12 columns">
                            <div class="row collapse">
                                <div class="small-12 email-wrapper columns">
                                    <input name="email" type="email" placeholder="Email" required />
                                    <small class="error">A valid email address is required.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 columns">
                                    <div class="row collapse">
                                        <div class="small-6 user-wrapper columns">
                                            <input id="firstname" name="firstname" type="text" placeholder="First Name" required />
                                            <small class="error">Please provide your First Name.</small>
                                        </div>
                                        <div class="small-6 columns">
                                            <input id="lastname" name="lastname" type="text" placeholder="Last Name" required />
                                            <small class="error">Please provide your Last Name.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 password-wrapper columns">
                                    <input name="password" type="password" placeholder="Password" pattern="^.{2,255}$" required />
                                    <small class="error">A password of atleast 2 characters is required.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 columns">
                                    <button type="submit" class="submit small right radius">Sign Up</button>
                                </div>
                            </div>                                                    
                        </div>
                    </div>
                </form>

                <div class="row collapse">
                    <div class="small-12 columns">
                        <p class="disclaimer text-center">By clicking "Sign Up", you agree to Best Movies by Farr's <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.</p>
                    </div>
                </div>   

                <div class="divider row collapse">
                    <div class="large-12 columns">
                        <div class="line"><span>Already have an account?</span></div>
                        <a data-orbit-link="login" class="slide-nav"><i class="fa fa-long-arrow-left"></i> Login</a>
                    </div>
                </div>

            </div>
        </div><!-- end signup slide -->

        <div data-orbit-slide="forgot" class="slide">
            <div>
                <h2>Forgot your Password?</h2>

                <div class="divider row collapse">
                    <div class="large-12 columns">Let us know what email you use to login and we'll send you an email with instructions.</div>
                </div>

                <form data-abide>
                    <div class="row">
                        <div class="small-12 columns">
                            <div class="row collapse">
                                <div class="small-12 email-wrapper columns">
                                    <input name="email" type="email" placeholder="Email" required />
                                    <small class="error">We couldn't find an account associated with that email.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 columns">
                                    <button type="submit" class="submit small right radius">Send</button>
                                </div>
                            </div>                                                    
                        </div>
                    </div>
                </form>

                <div class="divider row collapse">
                    <div class="large-12 columns">
                        <div class="line">&nbsp;</div>
                        <a data-orbit-link="login" class="slide-nav"><i class="fa fa-long-arrow-left"></i> Cancel</a>
                    </div>
                </div>

            </div>
        </div><!-- end forgot pwd slide -->

        <div data-orbit-slide="reset" class="slide">
            <div>
                <h2 data-orbit-link="reset">New Password</h2>

                <form data-abide>
                    <div class="row">
                        <div class="small-12 columns">
                            <div class="row collapse">
                                <div class="small-12 password-wrapper columns">
                                    <input id="password-new" name="password-new" type="password" placeholder="Password" pattern="^.{2,255}$" required />
                                    <small class="error">A password of atleast 2 characters is required.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 password-wrapper columns">
                                    <input id="password-confirm" name="password-confirm" type="password" placeholder="Confirm Password" pattern="^.{2,255}$" required data-equalto="password-new" />
                                    <small class="error">The password did not match.</small>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-12 columns">
                                    <button type="submit" class="submit small right radius">Change Password</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="divider row collapse">
                    <div class="large-12 columns">
                        <div class="line">&nbsp;</div>
                        <a data-orbit-link="login" class="slide-nav"><i class="fa fa-long-arrow-left"></i> Cancel</a>
                    </div>
                </div>

            </div>
        </div><!-- end forgot pwd slide -->
    </div>
</div>